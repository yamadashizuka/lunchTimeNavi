<%= form_for(@restaurant) do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
      <% @restaurant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<TABLE BORDER=0 CELLPADDING=10 BGCOLOR="LIME"><TR><TD VALIGN="TOP">

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :postcode %><br />
    <%= f.text_field :postcode %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :telephoneNumber %><br />
    <%= f.telephone_field :telephoneNumber %>
  </div>

</TD><TD VALIGN="TOP"><br />

  <div class="field">
    <%= f.label :reservation %>
    <%= f.check_box :reservation %>
  </div>
  <div class="field">
    <%= f.label :memo %><br />
    <%= f.text_field :memo %>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.url_field :url %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

</TD><TD VALIGN="TOP"><br />

開店日<BR />
  <div class="field">
    <%= f.label :sun %>
    <%= f.check_box :sundayUp %>
  </div>
  <div class="field">
    <%= f.label :mon %>
    <%= f.check_box :mondayUp %>
  </div>
  <div class="field">
    <%= f.label :tue %>
    <%= f.check_box :tuesdayUp %>
  </div>
  <div class="field">
    <%= f.label :wed %>
    <%= f.check_box :wednesdayUp %>
  </div>
  <div class="field">
    <%= f.label :thu %>
    <%= f.check_box :thursdayUp %>
  </div>
  <div class="field">
    <%= f.label :fri %>
    <%= f.check_box :fridayUp %>
  </div>
  <div class="field">
    <%= f.label :sat %>
    <%= f.check_box :saturdayUp %>
  </div>

</TD><TD VALIGN="TOP"><br />
ランチタイム<BR />
  <div class="field">
    <%= f.label :From %><br />
    <%= f.time_select :startTime, :default => Time.gm(2012, 11, 11, 11, 00, 00) , :minute_step => 15 %>
  </div>
  <div class="field">
    <%= f.label :To %><br />
    <%= f.time_select :endTime, :default => Time.gm(2012, 11, 11, 15, 00, 00) , :minute_step => 15 %>
  </div>

</TD></TR></TABLE>



<BR />

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>



